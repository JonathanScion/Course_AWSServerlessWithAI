{
  "name": "university-management",
  "version": "1.0.0",
  "description": "University Management System - Full Stack Application with E2E Testing",
  "private": true,
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:departments": "playwright test tests/departments.spec.js",
    "test:report": "playwright show-report",
    "test:codegen": "playwright codegen http://localhost:3000",
    "install:all": "cd client && npm install && cd ../server && npm install"
  },
  "keywords": [
    "university",
    "management",
    "e2e",
    "playwright"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "playwright": "^1.56.1"
  }
}
